// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  EMPLOYEE
  ADMIN
}

enum Format {
  TWO_D
  THREE_D
}

enum SeatStatus {
  AVAILABLE
  HELD
  SOLD_ONLINE
  SOLD_PHYSICAL
}

enum BookingStatus {
  RESERVED
  PAID
  CANCELLED
}

enum PurchaseChannel {
  ONLINE
  PHYSICAL
}

enum ShowingStatus {
  SCHEDULED
  CANCELLED
}

model User {
  id                  Int                   @id @unique @default(autoincrement())
  name                String
  lastName            String
  email               String                @unique
  password            String
  type                Int
  dni                 Int                   @unique
  role                Role                  @default(CUSTOMER)
  availableHours      Int?                  @default(0)
  availableMinutes    Int?                  @default(0)
  usedHours           Int?                  @default(0)
  recoveryCode        Int?
  patents             Patent[]
  deletedPatent       DeletedPatents[]
  sellPoint           SellPoint[]
  sellingHoursReports SellingHoursReports[]
  parking             Parking[]
  userReports         UserHoursReports[]
  userParkingReports  UserParkingReports[]
  paidInfractions     Infraction[]          @relation("InfractionPaidByUser")
  receivedHoursSales  SellingHoursReports[] @relation("SellingHoursReportsTargetUser")
  bookings            Booking[]             @relation("BookingCustomer")
  soldBookings        Booking[]             @relation("BookingSoldBy")
  seatHolds           SeatHold[]
  cinemaCredits       CinemaCredit[]
}

model SellPoint {
  id               Int                        @id @unique @default(autoincrement())
  address          String
  street           String?
  streetNumber     Int?
  availableHours   Int                        @default(0)
  usedHours        Int                        @default(0)
  pointName        String
  dni              Int?                       @unique
  userId           Int?                       @unique
  profitPercentage Int
  user             User?                      @relation(fields: [userId], references: [id])
  reports          AssignHoursReports[]
  patentReports    AssignPatentHoursReports[]
}

model Patent {
  id             Int      @id @unique @default(autoincrement())
  patentId       String
  userId         Int?
  createdAt      DateTime @default(now())
  hasSingleHours Boolean  @default(false)
  singleHours    Int      @default(0)
  dni            Int?
  isAllowed      Boolean  @default(false)
  canShow        Boolean  @default(true)
  isAllowedIn    String?
  houseType      String?
  user           User?    @relation(fields: [userId], references: [id])
}

model PatentValidation {
  id               Int       @id @unique @default(autoincrement())
  patentId         String    @unique
  validationsToday Int       @default(0)
  validatedAt      DateTime?
}

model DeletedPatents {
  id        Int       @id @unique @default(autoincrement())
  patentId  String
  userId    Int
  deletedAt DateTime?
  user      User      @relation(fields: [userId], references: [id])
}

model AssignHoursReports {
  id          String    @id @unique @default(uuid())
  hoursAdded  Int
  addedAt     DateTime
  sellPointId Int
  hourPrice   Float
  sellPoint   SellPoint @relation(fields: [sellPointId], references: [id])
  soldBy      Int?
}

model AssignPatentHoursReports {
  id          String     @id @unique @default(uuid())
  hoursAdded  Int
  addedAt     DateTime
  sellPointId Int?
  hourPrice   Float
  patentId    String
  dni         Int
  sellPoint   SellPoint? @relation(fields: [sellPointId], references: [id])
  soldBy      Int?
}

model SellingHoursReports {
  id         String   @id @unique @default(uuid())
  hoursAdded Int
  addedAt    DateTime
  userId     Int
  hourPrice  Float
  soldBy     Int?
  user       User     @relation(fields: [userId], references: [id])
  targetUserId Int?
  targetUser   User?    @relation("SellingHoursReportsTargetUser", fields: [targetUserId], references: [id])
}

model UserHoursReports {
  id          String   @id @unique @default(uuid())
  userId      Int
  hoursBought Int
  boughtAt    DateTime
  hourPrice   Float
  soldBy      Int
  user        User     @relation(fields: [userId], references: [id])
}

model UserParkingReports {
  id         String   @id @unique @default(uuid())
  userId     Int
  startedAt  DateTime
  finishedAt DateTime
  patentId   String
  totalHours Int
  hourPrice  Float
  user       User     @relation(fields: [userId], references: [id])
}

model HoursPrices {
  id        Int       @id @unique @default(autoincrement())
  currency  String
  hourPrice Float
  createdAt DateTime  @default(now())
  deleted   Boolean   @default(false)
  deletedAt DateTime?
  dayPrice  Float?
  weekPrice Float?
}

model Parking {
  id         String    @id @unique @default(uuid())
  hours      Int
  startedAt  DateTime  @default(now())
  finishedAt DateTime?
  patentId   String
  userId     Int?
  isMonthly  Boolean   @default(false)
  user       User?     @relation(fields: [userId], references: [id])
}

model Infraction {
  id              String            @id @unique @default(uuid())
  numberId        Int               @unique @default(autoincrement())
  createdAt       DateTime
  cancelled       Boolean           @default(false)
  cancelledAt     DateTime?
  cancelledReason String?
  patentId        String
  street          String?
  payed           Boolean
  payedAt         DateTime?
  images          InfractionImage[]
  isEnableToPay   Boolean?          @default(true)
  paymentMethod   String?
  payedByUserId   Int?
  payedByUser     User?             @relation("InfractionPaidByUser", fields: [payedByUserId], references: [id])
}

model InfractionImage {
  id           String     @id @unique @default(uuid())
  url          String
  infraction   Infraction @relation(fields: [infractionId], references: [id])
  infractionId String
  createdAt    DateTime   @default(now())
}

model SingleParkingComprobant {
  id           Int      @id @unique @default(autoincrement())
  patentId     String
  dni          Int
  hours        Int
  sellingPoint String
  createdAt    DateTime @default(now())
}

model SellingHoursComprobant {
  id           Int      @id @unique @default(autoincrement())
  dni          Int
  hours        Int
  sellingPoint String
  price        Int
  createdAt    DateTime
}

model Holiday {
  id         Int      @id @unique @default(autoincrement())
  identifier String   @unique
  name       String
  type       String
  infoUrl    String?
  day        Int
  month      Int
  original   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model SellingPointHoursComprobant {
  id           Int      @id @unique @default(autoincrement())
  dni          Int
  hours        Int
  sellingPoint String
  sellerName   String
  price        Int
  createdAt    DateTime
}

model SellingMonthlyComprobant {
  id        Int      @id @unique @default(autoincrement())
  dni       Int
  patentId  String
  createdAt DateTime @default(now())
  finishedAt DateTime?
  totalPrice Int
  soldBy   Int
}

model Movie {
  id              String   @id @unique @default(uuid())
  title           String
  description     String
  durationMinutes Int
  language        String
  format          Format
  posterUrl       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  showings        Showing[]
}

model Showing {
  id           String   @id @unique @default(uuid())
  movieId      String
  startTime    DateTime
  priceCents   Int
  rows         Int
  seatsPerRow  Int
  totalSeats   Int
  status       ShowingStatus @default(SCHEDULED)
  cancelledAt  DateTime?
  createdAt    DateTime @default(now())
  movie        Movie    @relation(fields: [movieId], references: [id])
  seats        Seat[]
  seatHolds    SeatHold[]
  credits      CinemaCredit[]
}

model Seat {
  id        String     @id @unique @default(uuid())
  showingId String
  rowLabel  String
  number    Int
  status    SeatStatus @default(AVAILABLE)
  createdAt DateTime   @default(now())
  showing   Showing    @relation(fields: [showingId], references: [id])
  tickets   Ticket[]
  hold      SeatHold?

  @@unique([showingId, rowLabel, number])
  @@index([showingId, status])
}

model SeatHold {
  id        String   @id @unique @default(uuid())
  seatId    String   @unique
  showingId String
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime
  seat      Seat     @relation(fields: [seatId], references: [id])
  showing   Showing  @relation(fields: [showingId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([showingId, expiresAt])
  @@index([userId])
}

model Booking {
  id              String          @id @unique @default(uuid())
  createdAt       DateTime        @default(now())
  status          BookingStatus
  channel         PurchaseChannel
  totalPriceCents Int
  customerId      Int?
  soldById        Int?
  customerEmail   String?
  customer        User?           @relation("BookingCustomer", fields: [customerId], references: [id])
  soldBy          User?           @relation("BookingSoldBy", fields: [soldById], references: [id])
  tickets         Ticket[]
  credits         CinemaCredit[]

  @@index([customerId])
  @@index([soldById])
}

model Ticket {
  id          String   @id @unique @default(uuid())
  bookingId   String
  seatId      String   @unique
  qrToken     String   @unique
  checkedInAt DateTime?
  createdAt   DateTime @default(now())
  booking     Booking  @relation(fields: [bookingId], references: [id])
  seat        Seat     @relation(fields: [seatId], references: [id])

  @@index([bookingId])
}

model CinemaCredit {
  id             String   @id @unique @default(uuid())
  userId         Int
  bookingId      String?
  showingId      String?
  amountCents    Int
  remainingCents Int
  reason         String
  createdAt      DateTime @default(now())
  expiresAt      DateTime?
  user           User     @relation(fields: [userId], references: [id])
  booking        Booking? @relation(fields: [bookingId], references: [id])
  showing        Showing? @relation(fields: [showingId], references: [id])

  @@index([userId])
  @@index([bookingId])
  @@index([showingId])
}
